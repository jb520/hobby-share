<div>
  <div>
    <h1>
      <%= @hobby.name %> 
    </h1>

    <div>
      <div>
        <a href="<%= hobbies_path %>">
          Go back
        </a>
      </div>

      <!--<div>
        <a href="/delete_hobby/<%= @hobby.id %>">
          Delete hobby
        </a>-->
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @hobby.name %>
      </dd>
    </dl>
  </div>
</div>


<% @hobby.posts.all.each do |post| %>
  <div class="card">
    <div class="card-body">
      <p class="card-text"><%=post.body%></p>
      <p class="card-text d-flex justify-content-between "><small><%=post.poster.username%></small><small class="text-body-secondary"><%=time_ago_in_words(post.created_at)%> ago</small></p>
    </div>
  <!--<img src="..." class="card-img-bottom" alt="...">-->
  <span class="d-flex justify-content-end px-2"><%= link_to 'view post', post_path(post.id) %></span>
</div>
<% end %>

