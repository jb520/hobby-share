<h3 class="ysabeau-sc"><%= resource_name.to_s.humanize %> settings</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field rubik my-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field rubik my-3">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field rubik my-3">
    <%= f.label :image %><br />
    <%= f.text_field :image, autofocus: true, autocomplete: "image", placeholder: "Image url" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field rubik my-3">
    <%= f.label :new_password %> <small>(leave blank if you don't want to change it)</small><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} characters minimum" %>
  </div>

  <div class="field rubik my-3">
    <%= f.label :new_password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Re-type new password" %>
  </div>

  <div class="field rubik my-2">
    <%= f.label :password %> <small>(we need your current password to confirm your changes)</small><br />
    <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Current password" %>
  </div>

  <div class="actions my-3">
    <%= f.submit "Update" %>
  </div>
<% end %>
<div class="mx-3 my-4">
  <h4 class="ysabeau-sc">Delete my account</h4>

  <div><%= button_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></div>
</div>

<%= link_to "Back", :back %>
