<div class="card px-5 mx-5 d-flex better-colors border-bottom">
  <!--<img src="..." class="card-img-top" alt="...">-->
  <div class="card-body">
    <div class="d-flex">
      <%= image_tag post.poster.image, :class => "img-fluid post-img" if post.poster.image.attached?  %>
      <h5 class="card-title align-self-center mx-3 rubik"><%=@post.poster.username%></h5>

    
      <div class="container-fluid d-flex flex-wrap justify-content-end">
        <div  class="me-3">
          <%= link_to edit_post_path(@post), :class => "link-color" do%>
            <i class="fa-regular fa-pen-to-square fa-lg"></i>
          <% end %>  
        </div>
        
        <div class="me-3">
          <%= link_to post_path, :method => :delete, :class => "link-color" do%>
            <i class="fa-solid fa-trash-can fa-lg"></i>
          <% end %>  
        </div>
      </div>
    </div>
    <p class="card-text py-2 px-5"><%=@post.content%></p>
    <p class="card-text d-flex justify-content-end"><small class="d-flex align-self-center accent-text"><%= time_ago_in_words(@post.created_at) %> ago</small></p>
    </div>
    <div class="d-flex">
      <div class="px-5">
        <a href="/hobbies/<%=@post.hobby_id%>" class="link-color">
          Go back
        </a>
      </div>

    

    </div>
</div>
